doctype
html
	head
		meta(charset="utf-8")
		meta(name="viewport" content="width=device-width, inital-scale=1.0,maximum-scale=1.0,user-scalable=no")
		meta(name="apple-mobile-web-app-status-bar-style" content="black-translucent")
		title 乐餐吧———关于
		link(href="/bower_components/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet")
		link(href="/stylesheets/style.css" rel="stylesheet" type="text/css")
		script(type="text/javascript" src="/javascripts/browserChecker.js")
	body(style="font-size:12px")
		.container
			div.row(style="margin-top:5px")
				div.col-lg-4.col-md-4.col-sm-12.col-xs-12.hidden-sm.hidden-xs
				div.col-lg-4.col-md-4.col-sm-12.col-xs-12
					div.panel.panel-default
						div.panel-heading
							div.h1.text-center 修改密码
						div.panel-body
							div.input-group(style="margin-top: 20px")
								div.input-group-addon
									div.text-right(style="width: 70px; font-size: 14px") 旧密码
								input#oldPassword.form-control(type="password"  name="oldPassword" placeholder="请输入旧密码，6~16个字符")
							div.input-group(style="margin-top: 20px")
								div.input-group-addon
									div.text-right(style="width: 70px; font-size: 14px") 新密码
								input#newPassword.form-control(type="password"  name="newPassword" placeholder="请输入旧密码，6~16个字符")
							div.input-group(style="margin-top: 20px")
								div.input-group-addon
									div.text-right(style="width: 70px; font-size: 14px") 确认密码
								input#confirmPassword.form-control(type="password"  name="confirmPassword" placeholder="请输入旧密码，6~16个字符")
							button#okBtn.btn.btn-success(style="margin-top:40px;margin-bottom:40px;width:100%")
				div.col-lg-4.col-md-4.col-sm-12.col-xs-12.hidden-sm.hidden-xs
		script(src="bower_components/jquery/dist/jquery.min.js")
		script(src="bower_components/bootstrap/dist/js/bootstrap.min.js")
		script(src="javascript/layer/layer.js")