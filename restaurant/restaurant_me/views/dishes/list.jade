doctype
html
	head
		meta(charset="utf-8")
		meta(name="viewport" content="width=device-width, inital-scale=1.0,maximum-scale=1.0,user-scalable=no")
		meta(name="apple-mobile-web-app-status-bar-style" content="black-translucent")
		title 乐餐吧———美食列表
		link(href="/bower_components/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet")
		link(href="/stylesheets/style.css" rel="stylesheet" type="text/css")
		script(type="text/javascript" src="../../javascripts/browserChecker.js")
	body(style="font-size:12px")
		.container
			div.row(style="margin-top:5px")
				div.col-lg-4.col-md-4.col-sm-12.col-xs-12.hidden-sm.hidden-xs
				div.col-lg-4.col-md-4.col-sm-12.col-xs-12
					div.panel.panel-default
						div.panel-heading.text-center
							div.h1(style="display:inline-block") 乐餐吧
							a(href="/mine")
								img.img-circle.pull-right(src="/images/user_default_icon.png" style="width: 40px; margin-top: 10px")
						div.common_item(style="margin-left:15px")
							img.img-rounded.img-responsive.common_item_left(src="#{restaurant.icon}")
							div.common_item_right
								div.common_item_right_title #{restaurant.name}
								div.common_item_right_summary #{restaurant.phoneNumber}
						hr(style="margin:0px")
						div(style="position: relative")
							div.clearfix
								ul.list-group(style="width: 70px; float: left; max-height: 390px; overflow-y: auto; margin-bottom: 0px")
									- var classfies=restaurant.classifies.split("|")
									- for(var i=0;i<classfies.length;i++){
										li.list-group-item(style="border-radius: 0px; border-left: 0px; font-size: 13px" id="classfy#{i}") #{classfies[i]}
									-}
								div
									-var classfies=restaurant.classifies.split("|")
									-for(var i=0;i<classfies.length;i++){
											ul.list-group(style="max-height: 390px; overflow-y: auto; margin-bottom: 0px; border-left: 1px solid gainsboro" id="dishes_list#{i}")
												-for(var j=0;j<dishes[i].length;j++){
												-console.log(restaurant);
												-var dish=dishes[i][j];
													li.list-group-item(style="border-radius: 0px; border-left: 0px; border-right: 0px")
														div.common_item(style="display: block; margin-right: 0px")
															img.img-responsive.img-rounded.common_item_left(src="#{dish.icon}")
															div.common_item_right
																div.common_item_right_title(style="font-size: 13px") #{dish.name}
																div.common_item_right_summary(style="font-size:13px") 价格#{dish.price}
															div.pull-right(style="height: 50px; padding-top: 12.5px; padding-bottom: 12.55px")
																img.img-responsive.img-rounded(src="/images/decrease.png",style="width: 30px; height: 30px; display: inline-block",id="decrease_#{i}_#{j}")
																span.text-center(style="width: 10px; height: 30px; display: inline-block; line-height:30px; vertical-align: middle",id="cout_#{i}_#{j}") 0
																img.img-responsive.img-rounded(src="/images/increase.png",style="width: 30px; height: 30px; display: inline-block",id="increase_#{i}_#{j}")
												-}
									-}
						div(style="background-color:gainsboro; width:100%; padding: 10px; border-bottom-left-radius: 4px; border-bottom-right-radius: 4px")
							span 总价：
							span#totalPrice(style="font-size: 28px") 0
							span 元
							span.pull-right(style="display:block")
								span(style="font-size:10px") 不要超过28元哦！
								a.btn.btn-success#commitBtn 选好了
				div.col-lg-4.col-md-4.col-sm-12.col-xs-12.hidden-sm.hidden-xs 
		script(src="../../bower_components/jquery/dist/jquery.min.js")
		script(src="../../bower_components/bootstrap/dist/js/bootstrap.min.js")
		script(src="../../javascript/layer/layer.js")
		script(src="../../javascript/dishes-list.js")
		script 
			-var res=JSON.stringify(restaurant);
			-var dis=JSON.stringify(dishes);
			| console.log( !{res});
			| console.log(!{dis});
			| submitDish( !{res},!{dis});

									
