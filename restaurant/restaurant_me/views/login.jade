doctype
html
	head
		meta(charset="utf-8")
		meta(name="viewport" content="width=device-width, inital-scale=1.0,maximum-scale=1.0,user-scalable=no")
		meta(name="apple-mobile-web-app-status-bar-style" content="black-translucent")
		title 乐餐吧———登陆
		link(href="/bower_components/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet")
		link(href="/stylesheets/style.css" rel="stylesheet" type="text/css")
		script(type="text/javascript" src="/javascripts/browserChecker.js")
	body(style="font-size:12px")
		.container
			div.row(style="margin-top:5px")
				div.col-lg-4.col-md-4.col-sm-12.col-xs-12.hidden-sm.hidden-xs
				div.col-lg-4.col-md-4.col-sm-12.col-xs-12
					div#parent.well
						div.text-right
							a(href="about2") 关于
						div.h1.text-center 乐餐吧
						div.text-center V1.0
						div.text-center(style="margin-top:50px;margin-bottom:50px") 便捷点餐，欢乐加班
						div
							div.input-group(style="margin:20px")
								div.input-group-addon
									span.glyphicon.glyphicon-user
								input#username.form-control(type="text" name="username" placeholder="请输入用户名，最长16个字符")
							div.input-group(style="margin:20px")
								div.input-group-addon
									span.glyphicon.glyphicon-lock
								input#password.form-control(type="password" name="password" placeholder="请输入密码，6~16个字符")
							button#loginBtn.btn.btn-success(style="margin-top: 20px; width: 100%;") 登录
						div.text-align(style="margin-top: 30px; margin-bottom: 30px")
							a(href="reset-password") 忘记密码
						div.text-align(style="margin-top: 30px; margin-bottom: 30px") 仅限忽如寄使用
				div.col-lg-4.col-md-4.col-sm-12.col-xs-12.hidden-sm.hidden-xs
		script(src="bower_components/jquery/dist/jquery.min.js")
		script(src="bower_components/bootstrap/dist/js/bootstrap.min.js")
		script(src="javascript/layer/layer.js")
		script(src="javascript/index.js")



